{
  "manifest_version": 3,
  "name": "Voice Assistant",
  "version": "1.0",
  "description": "A voice-controlled assistant that opens websites.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}
